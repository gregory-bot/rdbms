{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",              // important for ES modules
    "moduleResolution": "node",      // <-- fix here
    "outDir": "./dist-server",       // backend compiled files
    "rootDir": "./server",           // only backend source
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist-server", "src/**/*"]
}
