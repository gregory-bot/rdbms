{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist-server",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*.ts",
    "ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*",
    "dist/**/*"
  ]
}